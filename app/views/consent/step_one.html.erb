<header id="header" class="header header_steps position-relative bg-ice-one">
  <div class="container">
    <div class="row px-15">
      <div class="header__logo-wrapper col-12 d-flex">
        <a
        href="/"
        class="header__logo d-block mt-45 mx-auto ml-xl-0"
        >
          <%= image_tag "logo@2x.png", alt: "logo", class: "h-100" %>
        </a>
      </div>
      <div class="col-12 col-md-8 col-xl mx-auto mt-30 mt-xl-45">
        <div class="header__progress-wrapper mx-auto">
          <div class="mb-2">Step 1 of 5</div>
          <div class="header__progress header__progress_step1"></div>
        </div>
      </div>
    </div>
  </div>
</header>
<section class="steps steps_pushed-up container">
  <div class="row">
    <div class="steps__box col mx-auto">
      <div class="bg-ice-one border p-15">
        <h3 class="text-center mt-2 mb-15">Introduction to this platform</h3>
        <p class="text-center mb-30">
          It is a long established fact that a reader
          will be distracted by the readable content
          of a page when looking at its layout.
        </p>
        <div class="steps__iframe">
          <iframe
          width="100%"
          height="100%"
          src="https://www.youtube.com/embed/mO3Q4bRQZ3k?rel=0&amp;controls=0&amp;showinfo=0"
          frameborder="0"
          allow="autoplay; encrypted-media"
          allowfullscreen
          ></iframe>
        </div>
        <div class="row flex-md-row-reverse">
          <div class="col-12 col-md-3 d-flex my-15 my-md-30">
            <%= link_to('Next', step_two_path, class: "btn btn-success mx-auto mr-md-0") %>
          </div>
          <div class="col-12 col-md-6 offset-md-3 d-flex mb-30 mt-md-30">
            <%= link_to('Save and Exit', '/dashboard', class: "steps__btn-save btn btn-primary mx-auto") %>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

