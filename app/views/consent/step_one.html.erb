<% if params[:registration] %>
  <header id="header" class="header header_steps position-relative bg-ice-one">
    <div class="container">
      <div class="row px-15">
        <div class="header__logo-wrapper col-12 d-flex">
          <a
            href="/"
            class="header__logo d-block mt-45 mx-auto ml-xl-0"
          >
            <%= image_tag "logo@2x.png", alt: t(:logo), class: "h-100" %>
          </a>
        </div>
        <div class="col-12 col-lg-8 col-lg mx-auto mt-30 mt-xl-45">
          <div class="header__progress-wrapper mx-auto">
            <div class="mb-2"><%= t 'consent.step_one.step_one_of_five' %></div>
            <div class="header__progress header__progress_step1"></div>
          </div>
        </div>
      </div>
    </div>
  </header>
<% else %>
  <header id="header" class="header header_big position-relative bg-ice-one">
    <div class="container">
      <div class="header__logo-wrapper header__logo-wrapper_big d-flex">
        <a
          href="/"
          class="header__logo d-block mt-45 mx-auto"
        >
          <%= image_tag "logo@2x.png", alt: t(:logo), class: "h-100" %>
        </a>
      </div>
    </div>
  </header>
<% end %>
<section class="steps steps_pushed-up container">
  <div class="row">
    <div class="steps__box col mx-auto">
      <div class="bg-ice-one border p-15">
        <%= simple_form_for @step, method: :put do |f| %>
          <%= f.hidden_field :accepted, value: "1" %>
          <div class="d-flex mb-30">
            <p class="text-center mx-auto mb-0">
              <%= t 'consent.step_one.watch_our_video' %>
            </p>
          </div>
          <div class="steps__iframe">
            <iframe
              width="100%"
              height="100%"
              src=<%= ENV['MCRI_VIDEO_LINK'] %>
              frameborder="0"
              allow="autoplay; encrypted-media"
              allowfullscreen
            ></iframe>
          </div>
          <div class="row flex-md-row-reverse">
            <div class="col-12 col-md-3 d-flex my-15 my-md-30">
              <% if params[:registration] %>
                <%= f.button :submit,
                  t(:next),
                  name: 'registration_step_two',
                  class: "btn btn-success mx-auto mr-md-0"
                %>
              <% end %>
            </div>
            <div class="col-12 col-md-6 offset-md-3 d-flex mb-30 mt-md-30">
              <%= f.button :submit,
                t(:save_and_exit),
                class: "steps__btn-save btn btn-primary mx-auto"
              %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
