<div class="container my-15 my-sm-180">
  <div class="row flex-column">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <div class="bg-ice-one border px-15">
        <%= render partial: 'layouts/header-modal' %>
        <div class="text-bigger text-center font-weight-bold mt-60 mb-45">
          Change your password
        </div>

        <%= simple_form_for(resource, as: resource_name, url: password_path(User), html: {method: :put}, defaults: {input_html: {class: 'form-control mb-0 mt-45'}}) do |f| %>

          <%= f.input :reset_password_token, as: :hidden %>

          <div class="form-row">
            <div class="col mb-30">
              <div class="position-relative">
                <%= f.input :password, label: "Enter password (6 characters minimum)", autofocus: true, placeholder: 'Enter password (6 characters minimum)' %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="col mb-30">
              <div class="position-relative">
                <%= f.input :password_confirmation, label: "Re-enter password", placeholder: "Re-enter password" %>
              </div>
            </div>
          </div>

          <div class="d-flex flex-column flex-sm-row-reverse justify-content-between">
            <%= f.button :submit, "Change password and log in", class: "btn btn-primary mb-30" %>
            <%= link_to('Cancel', '/', class: 'btn btn-outline-primary mb-30') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>