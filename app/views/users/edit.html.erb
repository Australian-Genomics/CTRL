<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, required: true, placeholder: "First Name", error: 'ghcv' %>
  <%= f.input :middle_name, required: false, placeholder: "Middle Name" %>
  <%= f.input :family_name, required: false, placeholder: "Family Name" %>
  <%= f.input :dob, required: false %>
  <%= f.input :flagship, collection: User.flagships.keys, include_blank: false, include_hidden: false %>
  <%= f.input :study_id, required: false %>
  <%= f.input :email, required: false %>
  <%= f.input :phone_no, required: false %>
  <%= f.input :address, required: false %>
  <%= f.input :preferred_contact_method, required: false %>
  <%= f.input :is_parent, required: false %>
  <%= f.button :submit, 'Update' %>
  <%= link_to 'Cancel', user_path %>
<% end %>


