<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6">
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name, required: false %>
      <%= f.input :middle_name, required: false %>
      <%= f.input :family_name, required: false %>
      <%= f.input :dob, required: false %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', user_path, :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= simple_form_for @user do |f| %>
      <%= f.input :email, required: false %>
      <%= f.input :phone_no, required: false %>
      <%= f.input :address, required: false %>
      <%= f.input :preferred_contact_method, default: 'Email',required: false %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', user_path, :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>

