<section class="dashboard pb-sm-60 pb-md-180">


  <div class="container px-md-4">
    <div class="h2 mt-20 mb-15 px-15 px-md-0">
      My Personal Details
    </div>
  </div>

  <div class="container px-md-0">
    <div class="row">

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              First Name
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.first_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Middle Name
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.middle_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Family Name
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.family_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Date of Birth
            </div>
            <div class="col-6">
              <%= current_user.dob %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              Email
              <i
              class="icon__i icon__i_popover ml-2"
              tabindex="0"
              role="button"
              data-toggle="popover"
              data-trigger="focus"
              data-placement="bottom"
              data-html="true"
              >
              </i>
              <div class="popover-content d-none">
                <div class="text-dark pb-12 pt-4">
                  Registered email for the platform
                  and also the email used for
                  notifications.
                </div>
              </div>
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.email %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Mobile phone
            </div>
            <div class="col-6">
              <%= current_user.phone_no %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Address
            </div>
            <div class="col-6">
              <%= current_user.address %>
              <%= current_user.suburb %>
              <%= current_user.state %>
              <%= current_user.post_code %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Preferred contact method
            </div>
            <div class="col-6">
              <%= current_user.preferred_contact_method %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              Flagship
            </div>
            <div class="col-6">
              <%= current_user.flagship %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              Study ID
            </div>
            <div class="col-6">
              <%= current_user.study_id %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              Register as a parent/guardian or carer
            </div>
            <div class="col-6">
              <% if current_user.is_parent == true %>
                Yes
              <% else %>
                No
              <% end %>
            </div>
          </div>
          <div>
            Registering on behalf of
          </div>
          <% if current_user.is_parent == true %>
            <%= render partial: 'users/child_details' %>
          <% else %>
            <%= render partial: 'users/kin_details' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container px-md-4">
    <%= link_to 'Update', edit_user_path(current_user), class: "btn btn-primary" %>
  </div>

</section>
