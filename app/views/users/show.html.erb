
<%= render 'shared/nav_bar' %>

<section class="dashboard pb-sm-60 pb-md-180">


  <div class="container px-md-4">
    <div class="h2 mt-20 mb-15 px-15 px-md-0">
      My Personal Details
    </div>
  </div>

  <div class="container px-md-0">
    <div class="row">

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>First Name</b>
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.first_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Middle Name</b>
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.middle_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Family Name</b>
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.family_name %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Date of Birth</b>
            </div>
            <div class="col-6">
              <%= current_user.dob %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Email</b>
              <i
                class="icon__i icon__i_popover ml-2"
                tabindex="0"
                role="button"
                data-toggle="popover"
                data-trigger="focus"
                data-placement="bottom"
                data-content="Careful! Changing this email address will change your login email, and where notifications are sent."
                data-html="true"
              >
              </i>
              <div class="popover-content d-none">
                <div class="text-dark pb-12 pt-4">
                  Registered email for the platform
                  and also the email used for
                  notifications.
                </div>
              </div>
            </div>
            <div class="col-6 text-ellipsis">
              <%= current_user.email %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Mobile phone</b>
            </div>
            <div class="col-6">
              <%= current_user.phone_no %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Address</b>
            </div>
            <div class="col-6">
              <%= current_user.address %>
              <%= current_user.suburb %>
              <%= current_user.state %>
              <%= current_user.post_code %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Preferred contact method</b>
            </div>
            <div class="col-6">
              <%= current_user.preferred_contact_method %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Flagship</b>
            </div>
            <div class="col-6">
              <%= current_user.flagship %>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Study ID</b>
            </div>
            <div class="col-6">
              <%= current_user.study_id %>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard__table col-12 col-md-6">
        <div>
          <div class="row no-gutters">
            <div class="col-6">
              <b>Register as a parent/guardian or carer</b>
            </div>
            <div class="col-6">
              <% if current_user.is_parent == true %>
                Yes
              <% elsif current_user.is_parent == false %>
                No
              <% end %>
            </div>
          </div>
          <div>
            <% if current_user.is_parent == true %>
              <b>Registering on behalf of</b>
              <%= render partial: 'users/child_details' %>
            <% else %>
              <b>Next of Kin:</b>
              <%= render partial: 'users/kin_details' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container px-md-4">
    <%= link_to 'Update', edit_profile_path, class: "btn btn-primary update" %>
  </div>

</section>
